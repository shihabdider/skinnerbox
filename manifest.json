{
  "manifest_version": 2,
  "name": "Skinnerbox",
  "version": "1.0",
  "description": "A simple Pomodoro timer with random task and break intervals.",
  "browser_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": [
    "alarms",
    "storage",
    "contextMenus",
    "notifications"
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
