{
  "manifest_version": 2,
  "name": "Skinnerbox",
  "version": "1.0",
  "description": "A simple Pomodoro timer with random task and break intervals.",
  "browser_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "alarms",
    "storage",
    "contextMenus",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "content_security_policy": "script-src 'self' https://cdn.jsdelivr.net; object-src 'self'",
  "options_page": "settings.html",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
